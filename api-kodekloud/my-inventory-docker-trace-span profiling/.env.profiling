# Configuração avançada do Pyroscope
# Controle granular do profiling para correlação com OpenTelemetry

# Taxa de upload (em segundos) - menor para mais detalhes
PYROSCOPE_UPLOAD_RATE=10

# Limiar de CPU para ativar profiling (0-100%)
CPU_THRESHOLD_FOR_PROFILING=20

# Limiar de memória para ativar profiling (em MB)
MEMORY_THRESHOLD_FOR_PROFILING=50

# Habilitar profiling contextual por endpoint
ENABLE_ENDPOINT_PROFILING=true

# Habilitar profiling de operações de banco de dados
ENABLE_DATABASE_PROFILING=true

# Habilitar coleta de stack traces detalhados
ENABLE_DETAILED_STACK_TRACES=true

# Incluir informações de runtime Go
INCLUDE_RUNTIME_INFO=true

# Habilitar profiling de goroutines críticas
ENABLE_GOROUTINE_PROFILING=true

# Tags dinâmicas baseadas em contexto
ENABLE_DYNAMIC_TAGS=true

# Profiling condicional baseado em carga
ENABLE_CONDITIONAL_PROFILING=true

# Detalhamento por user-agent
ENABLE_USER_AGENT_PROFILING=true
